<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  
  <servlet>
  <servlet-name>Login</servlet-name>
  <servlet-class>com.login.teja.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>Login</servlet-name>
  <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>Logout</servlet-name>
  <servlet-class>com.login.teja.LogoutServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>Logout</servlet-name>
  <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>     
    <servlet-name>Profile</servlet-name>  
    <servlet-class>com.login.teja.ProfileServlet</servlet-class>  
  </servlet>  
  
  <servlet-mapping>  
    <servlet-name>Profile</servlet-name>  
    <url-pattern>/ProfileServlet</url-pattern>  
  </servlet-mapping> 
  
  <servlet>
  <servlet-name>Database</servlet-name>
  <servlet-class>com.login.teja.DatabaseAccess</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>Database</servlet-name>
  <url-pattern>/DatabaseAccess</url-pattern>
  </servlet-mapping>
  
</web-app>
